# Environment Configuration for P2P Exchange
# Copy this file to .env and modify as needed

# Environment Configuration
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE_MB=10

# Grenache Configuration
GRAPE_URL=http://127.0.0.1:30001

# P2P Configuration
P2P_ENABLED=true
P2P_PORT=3000
P2P_HOST=0.0.0.0
DISCOVERY_MDNS=true
DISCOVERY_GRENACHE=true
BOOTSTRAP_PEERS=
PEER_STORAGE_PATH=.peers.json
MAX_PEERS=50
PEER_RECONNECT_INTERVAL=30000

# Exchange Configuration
EXCHANGE_PAIR=BTC/USD
EXCHANGE_PORT=3000

# Performance Configuration
PERFORMANCE_THRESHOLD_MS=10
MAX_ORDER_AMOUNT=1000000
MAX_ORDER_PRICE=1000000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=30000

# Security Configuration
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=1000
MAX_ORDERS_PER_MINUTE=100
MAX_ORDERS_PER_SECOND=10
MAX_MESSAGE_SIZE_KB=1024
